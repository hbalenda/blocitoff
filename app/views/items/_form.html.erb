<div class ="container">
  <fieldset>
    <%= form_for [user, item], :html => {:class => "form-inline"}  do |f| %>
    <div class="form-group">
      <label>New Task: </label>
        <%= f.text_field :name, class: 'form-control', placeholder: "  Description" %></div>
    <div class="form-group">
      <label>Days to complete: </label>
      <%= f.text_field :time_remaining, class: 'form-control', placeholder: '  e.g. "7"'%></div>
    <div class="form-group"><%= f.submit "Submit Task", class: 'btn btn-info pull-right' %></div>
        <% end %>
  </fieldset>
</div>
