<tbody>
  <%= content_tag :tr, class: "info", id: "item-#{item.id}" do %>
    <td><%= link_to '', [current_user, item], method: :delete, class: 'glyphicon glyphicon-ok white', remote: true %></td>
    <td><%= item.name %></td>
    <td><%= "#{pluralize(item.time_left, 'day')} left" %></td>
  <% end %>
</tbody>
